<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
  <TableLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
<TableRow>
    <Button
        android:id="@+id/uc4_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一个Button" />

    <Button
        android:id="@+id/uc4_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第二个Button" />
</TableRow>
        <Button
            android:id="@+id/uc4_button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第三个Button" />

      <TableRow
          android:layout_alignParentBottom="true"
          android:layout_alignParentStart="true">

          <Button
              android:id="@+id/uc4_button4"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="第四个Button" />
      </TableRow>
  </TableLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/uc4_back"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="bottom"
           android:layout_alignParentBottom="true"
           android:text="返回" />
</RelativeLayout>
</LinearLayout>
